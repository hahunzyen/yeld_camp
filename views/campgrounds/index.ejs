<%- include("../partials/header") %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>This is the campgrounds page!</h1>
            <p>View our hand-picked campground from all over the world</p>
            <!-- <p> -->
            <a class="btn btn-primary btn-lg" href="/campgrounds/new"><i class="fa fa-plus"></i> Add New Campground</a>
            <!-- </p> -->
            <p>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="search" name="search" placeholder="Search here" class="form-control">
                        <input type="submit" value="Search" class="form-control">
                    </div>
                </form>
            </p>

        </div>
    </header>

    <div class="row text-center" style="display:flex;flex-wrap: wrap;">
        <div class="col-md-12">
            <% if(noMatch !== null) { %>
            <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% campgrounds.forEach((campground) => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card">
                <img class="card-img-top img-responsive" src="<%= campground.image %>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.name %>
                    </h5>
                    <h4><span class="badge badge-secondary badge-pill" style="background: red"><i
                                class="fas fa-thumbs-up"></i>
                            <%= campground.likes.length %></span>
                    </h4>

                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info <span><i
                                class="fa fa-info"></i></span></a>
                </div>
            </div>
        </div>
        <% }) %>

    </div>

    <!-- <a href='/'>Go Back to HomePage</a> -->
</div>
<%- include("../partials/footer") %>